package{		import com.altoinu.flash.images.ImageDistorter;		import flash.display.MovieClip;	import flash.events.MouseEvent;		import fl.controls.Button;	import fl.controls.TextInput;		/**	 * ImageDistorter test.	 * @author kaoru.kawashima	 * 	 */	public class DistortTest_Main extends MovieClip	{				//--------------------------------------------------------------------------		//		//  Constructor		//		//--------------------------------------------------------------------------				/**		 * Constructor.		 * 		 */		public function DistortTest_Main()		{						super();						button_Distort.addEventListener(MouseEvent.CLICK, distortNow);					}				//--------------------------------------------------------------------------		//		//  Variables		//		//--------------------------------------------------------------------------				private var _distorter:ImageDistorter;				//--------------------------------------------------------------------------		//		//  Properties		//		//--------------------------------------------------------------------------				public var jon_image:MovieClip;				public var button_Distort:Button;		public var tl_x:TextInput;		public var tl_y:TextInput;		public var tr_x:TextInput;		public var tr_y:TextInput;		public var br_x:TextInput;		public var br_y:TextInput;		public var bl_x:TextInput;		public var bl_y:TextInput;				//--------------------------------------------------------------------------		//		//  Event handlers		//		//--------------------------------------------------------------------------				/**		 * Mouse click handler to execute distortion.		 * 		 */		private function distortNow(event:MouseEvent):void		{						// Create new instance of the distorter			if (_distorter == null)				_distorter = new ImageDistorter(this, jon_image, 5, 5);						// Distort!			_distorter.setTransform(Number(tl_x.text), Number(tl_y.text),									Number(tr_x.text), Number(tr_y.text),									Number(br_x.text), Number(br_y.text),									Number(bl_x.text), Number(bl_y.text))					}			}	}